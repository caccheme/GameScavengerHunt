<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:attr/buttonBarStyle"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="10dp" >

    <TextView
        android:id="@+id/CurrentGamesList_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Click to play!"
        android:textSize="18.0sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listview_CurrentGames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CurrentgameslistButton_menu"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/CurrentGamesList_textView" >

    </ListView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/listview_CurrentGames"
        android:layout_alignParentLeft="true"
        android:background="@android:color/darker_gray" />
    
    <Button
        android:id="@+id/CurrentgameslistButton_menu"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="@string/button_mainmenu" />
        
</RelativeLayout>